<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SecurityCameraClient"
             x:Class="SecurityCameraClient.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <ListView Grid.Row="0" x:Name="BlobList" ItemSelected="OnItemSelected" />
        <Image Grid.Row="1" x:Name="SelectedImage" />
    </Grid>

</ContentPage>